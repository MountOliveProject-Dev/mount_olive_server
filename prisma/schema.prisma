
generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}

model User {
  id       Int     @id @default(autoincrement())
  email    String   @unique
  firstName     String
  lastName      String
  profileId      Int @unique  
  profile        profile? @relation(fields: [profileId], references: [id]) 
    
  // Relation
  notifications Notification[]
}

model profile {
  id       Int     @id @default(autoincrement())
  dateOfBirth DateTime
  gender String
  phone String
  avatar String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  // Relation
  user User?
}

model Event {
  id       Int     @id @default(autoincrement())
  uniqueId String @unique @default(cuid())
  title    String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  date DateTime
  host String
  description String
  thumbnail String
}

model Media {
  id       Int     @id @default(autoincrement())
  title    String
  description String
  coverPhoto String
  source String
  duration BigInt
  type String
  category String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  viewCount BigInt
  likeCount BigInt
}

model Notification {
  id       Int     @id @default(autoincrement())
  title    String
  description String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  read Boolean
  userId Int
  user User @relation(fields: [userId], references: [id])
}


